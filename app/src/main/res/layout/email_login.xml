<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailLogin_toplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/credentialsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="36dp"
        android:layout_weight="2"
        android:background="@drawable/testbg"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameTextLayout_email_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/usernameField_email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="0dp"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:textColor="@color/textColor" />
        </android.support.design.widget.TextInputLayout>

        <!--Password Field-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordTextLayout_email_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="52dp"
            android:layout_weight="1"
            app:passwordToggleEnabled="true">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/passwordField_email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/textColor" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.6"
            android:gravity="right">

            <ImageButton
                android:id="@+id/goButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:background="@null"

                android:src="@drawable/go" />
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/credentialsLinearLayout"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1.5"
        android:background="@drawable/belowbg"
        android:orientation="vertical"
        android:paddingTop="35dp">

        <TextView
            android:id="@+id/donthaveaccountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/signupButton_email_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Dont't have an account?"
            android:textSize="20sp" />

        <Button
            android:id="@+id/signupButton_email_login"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/signup_bg"
            android:text="Sign up"
            android:textAllCaps="false" />


    </RelativeLayout>


</LinearLayout>
